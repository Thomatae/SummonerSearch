<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.league2.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.league2.app.Module.DaggerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.league2.app.Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.league2.app.Activities.InfoPagerActivity"
            android:label="@string/title_activity_info_pager" >

        </activity>
    </application>

</manifest>
